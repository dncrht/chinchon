<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.chinchon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chinchón</name>
    <description>
        Para llevar las cuentas jugando al chinchón.
    </description>
    <author email="daniel.cr.ht@gmail.com" href="https://github.com/dncrht">
        dncrht
    </author>
    <icon src="www/apple-touch-icon.png" />
    <content src="index.html" />
    <preference name="orientation" value="landscape" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
